# Flask Configuration
FLASK_ENV=production
PORT=5000

# AWS Cognito Configuration (REQUIRED - See COGNITO_SETUP_GUIDE.md)
# After creating Cognito User Pool, fill in these values:
AWS_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_XXXXXXXXX
COGNITO_APP_CLIENT_ID=1234567890abcdefghijklmnop

# AWS Credentials (for server-side Cognito operations)
# Get these from AWS IAM Console
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# Storage Configuration
STORAGE_TYPE=local
DATA_DIR=./data
STORAGE_LIMIT=1073741824

# Authentication
AUTH_ENABLED=true
